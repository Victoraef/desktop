 <script> 
     
     localStorange.setItem("Nick","name");
     </script>
    <script>
        // Nome do Jogador
        var jogador1 = "Jogador1"; 
        var jogador2 = "Jogador2"; 
  
        // Função para troca de jogadores
        function editNames() { 
            
            jogador1 = prompt("Nome do Jogador1");
            jogador1 = prompt("Nick Jogador1"); 
            

            jogador2 = prompt("Nome do Jogador2");
            jogador2 = prompt("Nick do Jogador2"); 
  
            document.querySelector("p.Jogador1") 
                            .innerHTML = jogador1; 
            document.querySelector("p.Jogador1") 
                            .innerHTML = jogador1; 
                              
            document.querySelector("p.Jogador2") 
                            .innerHTML = jogador2; 
            document.querySelector("p.Jogador2") 
                            .innerHTML = jogador2; 
        } 
  
        // Função para jogar os Dados
        function rollTheDice() { 
            setTimeout(function () { 
                var randomNumber1 = Math.floor(Math.random() * 6) + 1; 
                var randomNumber2 = Math.floor(Math.random() * 6) + 1; 
  
                document.querySelector(".img1").setAttribute("src", 
                    "dice" + randomNumber1 + ".png"); 
  
                document.querySelector(".img2").setAttribute("src", 
                    "dice" + randomNumber2 + ".png"); 
  
                if (randomNumber1 === randomNumber2) { 
                    document.querySelector("h1").innerHTML = "EMPATE!!!"; 
                } 
  
                else if (randomNumber1 < randomNumber2) { 
                    document.querySelector("h1").innerHTML 
                        = (jogador2 + " Ganhou"); 
                } 
  
                else { 
                    document.querySelector("h1").innerHTML 
                        = (jogador1 + " Ganhou"); 
                } 
            }, 100); 
        } 
    </script> 
